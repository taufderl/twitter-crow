.settings-form.col-md-3
  = form_for @setting do |f|
    - if @setting.errors.any?
      #error_explanation
        %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"
        %ul
          - @setting.errors.full_messages.each do |msg|
            %li= msg
    .form-group
      = f.label :key
      = f.text_field :key, class: 'form-control'
    .form-group
      = f.label :description
      = f.text_field :description, class: 'form-control'
    .form-group
      = f.label :type
      = f.select :type, Setting.TYPES, {}, {class: 'form-control'}   
    .form-group
      = f.label :value
      = f.text_field :value, class: 'form-control'   
    .form-group
      = f.submit 'Save'
