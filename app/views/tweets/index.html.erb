<h1>Listing tweets</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Created at</th>
      <th>Text</th>
      <th>Screen name</th>
      <th>Geo enabled</th>
      <th>Geo longitude</th>
      <th>Geo latitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id %></td>
        <td><%= tweet.created_at %></td>
        <td><%= tweet.text[0..100] %></td>
        <td><%= tweet.screen_name %></td>
        <td><%= tweet.geo_enabled %></td>
        <td><%= tweet.geo_longitude %></td>
        <td><%= tweet.geo_latitude %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
